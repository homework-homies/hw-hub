<div class="jumbotrontransparent jumbotron">

<ul class="nav nav-tabs">
    <% if session[:instructor_id] %>
      <li role="presentation"><a href="/instructors/<%=session[:instructor_id]%>">Back to Instructor Page</a></li>
    <% elsif session[:student_id] %>
      <li role="presentation"><a href="/students/<%=session[:student_id] %>">Back to Student Page</a></li>
    <% elsif session[:producer_id] %>
      <li role="presentation"><a href="/producers/<%=session[:producer_id] %>">Back to Producer Page</a></li>
    <% end %>
  </ul>

  <div class="jumbotronpersonalized jumbotron">

    <div class = "center form-actions">
      <h1>Create a New Assignment</h1>

      <div class = "center form-actions">

      <%= form_for @assignment, url:{ :action=>'create' } do |f| %>
        <%= f.text_field :title, :placeholder => "Title" %>
        <%= f.text_field :prompt_link, :placeholder => "Link" %>
        <%= f.hidden_field :instructor_id, :value => session[:instructor_id] %>
        <%= f.hidden_field :assigned_on, :value => Date.today %>
        <%= select_tag(:cohort_id, options_for_select(@instructor.cohorts.all.map { |cohort| [cohort.id]}, @instructor.cohorts.all.map { |cohort| [cohort.id]} )) %>
        <%= f.submit "Submit" %>
      <% end %>

      </div>
      
    </div>
  </div>
</div>
