<h1>New Cohort</h1>
<div class = "center form-actions">
<%= form_for @cohort, url:{ :action=>'create' } do |f| %>
<%= f.text_field :cohort_name, :placeholder => "Cohort Name" %>
<%= f.date_field :start_on, :placeholder => "Starts on" %>
<%= f.date_field :end_on, :placeholder => "Finishes on" %>
<select name="producer_select">
  <% @producers.each do |producer| %>
    <option value="<%= producer.name %>">
      <%= producer.name %>
    </option>
  <% end %>
</select>
<%= f.submit "Submit" %>
<% end %>
</div>