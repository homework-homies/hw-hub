<h1>New Cohort</h1>
<%= form_for @cohort, url:{ :action=>'create' } do |f|%>
<%= f.label "Cohort name: " %>
<%= f.text_field :cohort_name, :placeholder => "i.e. persephone" %>
<%= f.label "Start:" %>
<%= f.date_field :start_on, :placeholder => "Starts on" %>
<%= f.label "End:" %>
<%= f.date_field :end_on, :placeholder => "Finishes on" %>
<%= f.label "Producer: " %>
<select name="producer_select">
  <% @producers.each do |producer| %>
    <option value="<%= producer.name %>">
      <%= producer.name %>
    </option>
  <% end %>
</select>
<%= f.label "Students:" %>
<%= text_area_tag :student_emails,nil, :placeholder => "Send students a welcome letter & registration link. Please separate e-mail addresses by commas" %>
<%= submit_tag "Submit" %>
<% end %>