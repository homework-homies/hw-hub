<div id="submissions">
<h1>Submissions</h1>

<table class="table">
  <tr>
    <th>Date Submitted</th>
    <th>Title</th>
    <th>Link to Your Homework</th>
    <th>Grade Status</th>
  </tr>
  <% @submissions.each do |submission| %>
    <tr>
      <td><%= submission.submitted_on %></td>
      <td><a href="/students/<%= submission.student.id %>/submissions/<%= submission.id %>"><%= submission.assignment.title %></a></td>
      <td><a href="<%= submission.submission_link %>">Click Here</a></td>
      <td><%= submission.grade_status %> </td>
    </tr>
  <% end %>
</table>
</div>
