<h1>Welcome to the G.A. Homework Hub</h1>


<%= form_for("/login", method: "POST") do |f| %>
  <select name="login_selector">
    <option value="" disabled selected>Select One</option>
    <option value="Student">Student</option>
    <option value="Instructor">Instructor</option>
    <option value="Producer">Producer</option>
  </select><br/>
  
  <%= f.label "Email :" %>
  <%= f.email_field :email %><br/>

  <%= f.label "Password: " %>
  <%= f.password_field :password %>

  <%= f.submit "Log in" %>
<% end %> 


<h2>To login, select the appropriate tab above.</h2>
<p>Not a member?</p>
<button>Request an Invitation Here</button>