<script>
$(document).ready(function(){
	$('#hidden-div-instructor').hide();
	$('#hidden-div-student').hide();
	$('#hidden-div-producer').hide();
	$('#hidden-div-login').hide();
	$('#main-root').show();
});
</script>

<div class="jumbotrontransparent jumbotron">
	<ul class="nav nav-pills nav-justified">
	  <li role="presentation"><a href="#" class="login-button">Login</a></li>
	  <li role="presentation"><a href="#" class="main-root-button">Main</a></li>
	</ul>
	<div class="jumbotronpersonalized jumbotron">
		 <%= render 'main' %>
		 <%= render 'login' %>
		 <%= render 'instructorsignup' %>
		 <%= render 'producersignup' %>
		 <%= render 'studentsignup' %>
	</div>
 </div>

<script>
 	$('.login-button').on('click', function(event){
 		event.preventDefault();
		$('#hidden-div-login').show();
		$('#hidden-div-instructor').hide();
		$('#hidden-div-producer').hide();
		$('#hidden-div-student').hide();
		$('#main-root').hide();
	});

	$('.main-root-button').on('click', function(event){
		event.preventDefault();
		$('#hidden-div-login').hide();
		$('#hidden-div-instructor').hide();
		$('#hidden-div-producer').hide();
		$('#hidden-div-student').hide();
		$('#main-root').show();
	});
</script>

 